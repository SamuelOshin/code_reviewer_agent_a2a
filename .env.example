# ============================================
# Application Configuration
# ============================================
APP_NAME="Code Review Summarizer Agent"
DEBUG=true
VERSION="1.0.0"
SECRET_KEY=your_secret_key_here_generate_random_string

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=["*"]

# ============================================
# GitHub Configuration
# ============================================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_random_webhook_secret_here

# ============================================
# LLM Configuration
# ============================================
# Choose one: openai, anthropic, or google
LLM_PROVIDER=google

# OpenAI Configuration (optional)
OPENAI_API_KEY=sk-your_openai_api_key_here
# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
# Google Configuration (Gemini - DEFAULT)
GOOGLE_API_KEY=your_google_api_key_here

# LLM Model Settings
# Google: gemini-1.5-flash (faster), gemini-1.5-pro (more capable)
# OpenAI: gpt-4-turbo-preview, gpt-4o
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
LLM_MODEL=gemini-1.5-flash
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000

# ============================================
# Telex Configuration
# ============================================
TELEX_WEBHOOK_URL=https://telex.im/webhook/your-channel-webhook-url
TELEX_API_KEY=your_telex_api_key_if_required
TELEX_CHANNEL=#code-reviews

# ============================================
# Database Configuration (Optional)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/code_reviewer
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Security Configuration
# ============================================
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
